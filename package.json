        "historical": "^2.0.0",
        "i18next": "^12.1.0",
        "jsonwebtoken": "^8.5.0",
        "moment": "^2.24.0",
        "moment-timezone": "^0.5.23",
        "mongo-sanitize": "^1.0.1",
        "mongoose": "^5.4.16",
        "mongoose-seed": "^0.6.0",
        "node-fetch": "^2.3.0",
        "node-schedule": "^1.3.2",
        "nodemailer": "^6.0.0",
        "ramda": "^0.26.1",
        "restify": "^7.5.0",
        "restify-cors-middleware": "^1.1.1",
        "restify-errors": "^7.0.0",
        "restify-pino-logger": "^3.0.0",
        "restify-router": "^0.5.1",
        "sort-by": "^1.2.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.2.2",
        "uuid": "^3.3.2",
        "validator": "^10.11.0"
    },
    "description": "API for Teresa Perez Tours platform and mobile applications",
    "devDependencies": {
        "@commitlint/cli": "^7.3.2",
        "@commitlint/config-conventional": "^7.3.1",
        "@mahenrique94/path-replace": "^1.1.0",
        "@types/dotenv": "^6.1.0",
        "@types/file-type": "^10.6.0",
        "@types/i18next": "^12.1.0",
        "@types/jest": "^23.3.13",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/moment": "^2.13.0",
        "@types/moment-timezone": "^0.5.12",
        "@types/mongoose": "^5.3.10",
        "@types/node": "^10.12.18",
        "@types/node-schedule": "^1.2.3",
        "@types/nodemailer": "^4.6.7",
        "@types/ramda": "^0.25.46",
        "@types/restify": "^7.2.7",
        "@types/restify-cors-middleware": "^1.0.1",
        "@types/restify-errors": "^4.3.3",
        "@types/supertest": "^2.0.7",
        "@types/uuid": "^3.4.4",
        "@types/validator": "^10.9.0",
        "husky": "^1.3.1",
        "jest": "^24.0.0",
        "ndb": "^1.0.42",
        "nodemon": "^1.18.10",
        "npm-run-all": "^4.1.5",
        "pino-elasticsearch": "^3.0.1",
        "prettier": "^1.16.4",
        "supertest": "^3.4.2",
        "ts-jest": "^23.10.5",
        "tsc-watch": "^1.0.31",
        "tslint": "^5.12.0"
    },
    "keywords": [
        "api",
        "node",
        "nodejs",
        "typescript",
        "restify",
        "mongo",
        "mongodb"
    ],
    "license": "ISC",
    "main": "./dist/src/server.js",
    "name": "tpt-api",
    "scripts": {
        "build": "run-s clean:dist:folder ts",
        "check:ts": "prettier --config ./.prettierrc --check './src/**/*.ts'",
        "ci": "run-s test test:e2e",
        "clean:dist:folder": "rm -rf ./dist/",
        "commitlint": "commitlint -E HUSKY_GIT_PARAMS",
        "dev": "run-s clean:dist:folder ts:w",
        "elastic:log": "pino-elasticsearch",
        "format:ts": "prettier --config ./.prettierrc --write './src/**/*.ts'",
        "lint": "tslint -c ./tslint.json -p .",
        "lint:fix": "npm run lint -- --fix",
        "path:replace": "path-replace",
        "server": "nodemon ./dist/src/main",
        "server:debug": "ndb nodemon ./dist/src/main",
        "stack:dev": "docker-compose up -d",
        "stack:dev:clean": "docker-compose rm -s -f",
        "stack:dev:start": "docker-compose start",
        "stack:dev:stop": "docker-compose stop",
        "start": "run-s server",
        "start:log": "npm run server | npm run elastic:log",
        "start:debug": "ndb run-s server:debug",
        "start:debug:log": "ndb npm run server:debug | npm run elastic:log",
        "ts": "run-s tsc path:replace",
        "ts:w": "tsc-watch --onSuccess \"npm run path:replace\"",
        "test": "jest --config ./jest.config.js --detectOpenHandles --forceExit --passWithNoTests",
        "test:w": "jest --config ./jest.config.js --detectOpenHandles --passWithNoTests --watchAll",
        "test:e2e": "API_ENVIRONMENT=test jest --config ./jest.config.e2e.js --detectOpenHandles --forceExit --passWithNoTests",
        "test:e2e:w": "API_ENVIRONMENT=test jest --config ./jest.config.e2e.js --detectOpenHandles --passWithNoTests --watchAll",
        "tsc": "tsc"
    },
    "version": "1.0.0"
}
