{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./src",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es2017"],
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["*"],
            "@config/*": ["_config/*"],
            "@constants/*": ["constants/*"],
            "@env/*": ["_environments/*"],
            "@features/*": ["features/*"],
            "@i18n": ["_translate/i18n"],
            "@utils/*": ["utils/*"]
        },
        "preserveSymlinks": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules", "**/*.test.ts"],
    "include": ["./src/**/*"]
}
